all: compile

executable   ?=  auraed

compile: ## Compile for the local architecture âš™
	@cargo build --release

install: ## Install the program to /usr/bin ğŸ‰
	@echo "Installing..."
	@cargo install --path .

#test: clean compile install ## ğŸ¤“ Run go tests
#	@echo "Testing..."
#	go test -v ./...

clean: ## Clean your artifacts ğŸ§¼
	@echo "Cleaning..."
	@cargo clean
	@rm -rvf target/*
	@rm -rvf $(executable)

.PHONY: help
help:  ## ğŸ¤” Show help messages for make targets
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "[32m%-30s[0m %s", $$1, $$2}'
